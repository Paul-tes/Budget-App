<div id="categories" class="body-height custom-light-gray-bg">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
  <div class="custom-green-bg p-2 fixed bottom-0 right-0 left-0">
    <div style="border: 2px solid white; padding: 0.5rem; text-align: center;">
      <%= link_to "Add category", new_category_path(user_id: current_user), class: "text-white" %>
    </div>
  </div>
</div>

