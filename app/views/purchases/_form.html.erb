      <%= form.collection_select :category_id, current_user.categories, :id, :name, { include_blank: false }, {class: "bg-gray-200 text-gray-700 border border-gray-200 rounded text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-40 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mx-5"} %>
    </div>
    <div class="p-2 bg-blue-600 text-center text-white rounded mt-20 w-20 mx-auto">
      <%= form.submit "Save" %>
    </div>
  </div>


<% end %>
