<section class="h-screen custom-light-gray-bg">
  <div class="custom-blue-bg flex items-center justify-around py-2 mb-4">
    <%= link_to :back do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    <%end%>
    <h2 class="text-xl text-center text-white">Log in</h2>
    <div></div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field input-cont">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: :email, class: "input" %>
      <%= f.password_field :password, autocomplete: "current-password", required: true, placeholder: :password, class: "input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions flex justify-center">
      <%= f.submit "Log in", class: "bg-sky-700 py-2 mt-4 mb-6 text-white login-btn rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
